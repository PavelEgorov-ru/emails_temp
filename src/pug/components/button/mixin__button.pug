mixin button(url, button)
  td(align="center" bgcolor=button.bgColor height="40" valign="middle" style="border-radius:4px;")
    a(href=url target="_blank" style="display:block; font-family: Arial, sans-serif; font-size:16px; line-height:24px; padding:8px 20px 8px 20px; text-decoration:none; white-space:nowrap; font-weight: bold;"+button.color)
      span(style="font-family: Arial, sans-serif;font-size: 16px; line-height: 24px; font-weight: bold;"+button.color)=button.text